<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="style.css"
  </head>
  <body>
      <div class="logo">
        <span>Movies</span>
      </div>
      <div class="allsection">
        <section class="get">
          <h3>Movies List</h3>
          <button type="submit"><a href="/load-list">Show all the movies</a> </button>
          <br></br>
          <div>
            {{# each items }}
                <article class="item">
                    <div><b>ID:</b> {{ this._id}}</div>
                    <div><b>Title:</b> {{ this.title }}</div>
                    <div><iframe width="285" height="220"src="{{ this.url }}"> </iframe></div>
                    <div><b>Description:</b> {{ this.description }}</div>
                    <div><b>Rating:</b> {{ this.rating }}</div>
                    <div><b>Released:</b> {{ this.released }}</div>
                </article>
            {{/each}}
          </div>
        </section>
        <section class="insert">
          <h3>Insert new Movie</h3>
          <form action="/insert" method="post">
              <div class="input">
                  <label for="title">Title</label>
                  <input type="text" id="title" name="title">
              </div>
              <div class="input">
                  <label for="url">URL adress of the movie (ex: https://www.youtube.com/embed/Y-aVSs9ftiM )</label>
                  <input type="text" id="url" name="url">
              </div>
              <div class="input">
                  <label for="description">Description</label>
                  <input type="text" id="description" name="description">
              </div>
              <div class="input">
                  <label for="rating">Rating</label>
                  <input type="text" id="rating" name="rating">
              </div>
              <div class="input">
                  <label for="released">Release-date</label>
                  <input type="text" id="released" name="released">
              </div>

              <button type="submit">INSERT</button>
          </form>
        </section>
        <section class="update">
            <h3>Update a movie</h3>
            <form action="/update" method="post">
                <div class="input">
                    <label for="id">ID</label>
                    <input type="text" id="id" name="id">
                </div>
                <div class="input">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title">
                </div>
                <div class="input">
                    <label for="url">URL adress of the movie</label>
                    <input type="text" id="url" name="url">
                </div>
                <div class="input">
                    <label for="description">Description</label>
                    <input type="text" id="description" name="description">
                </div>
                <div class="input">
                    <label for="rating">Rating</label>
                    <input type="text" id="rating" name="rating">
                </div>
                <div class="input">
                    <label for="released">Release-date</label>
                    <input type="text" id="released" name="released">
                </div>
                <button type="submit">UPDATE</button>
            </form>
        </section>
        <section class="delete">
            <h3>Delete a movie</h3>
            <form action="/delete" method="post">
                <div class="input">
                    <label for="id">ID</label>
                    <input type="text" id="id" name="id">
                </div>
                <button type="submit">DELETE</button>
            </form>
        </section>
      </div>
  </body>
</html>
